{% extends 'layout.html.twig' %}
{% block title %}Admin - Edit Article #{{article.id}}{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        {% if article.id is not empty %}
        <h2 class="display-4">Update Article #{{article.id}}</h2>
        {% else %}
        <h2 class="display-4">Create Article</h2>
        {% endif %}
        <hr>
        <div class="col-12">
            {% if errorForm is not null %}
            <div class="alert alert-danger" role="alert">
                {{errorForm}}
            </div>
            {% endif %}
        </div>
        <div class="col-12">
            <form method="POST">
                <input type="text" class="d-none" id="id" name="id" value="{{article.id}}">
                <div class="form-group">
                    <label for="Name">Name *</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{article.name}}">
                </div>
                <div class="form-group">
                    <label for="price">Price *</label>
                    <input type="text" class="form-control" id="price" name="price" value="{{article.price}}">
                </div>
                <div class="form-group">
                    <label for="price">Picture *</label>
                    <input type="text" class="form-control" id="img" name="img" value="{{article.img}}">
                </div>
                <div class="text-center">
                    <img src="" alt="" class="img-fluid" id="img-display">
                </div>
                <div class="small">* Champs obligatoires</div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    <script>
        document.getElementById('img').addEventListener('change', (e) => {
            document.getElementById('img-display').src = e.target.value;
        })
    </script>
{% endblock %}