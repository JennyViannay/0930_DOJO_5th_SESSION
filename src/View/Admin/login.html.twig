{% extends 'layout.html.twig' %}
{% block title %}Admin - Login
{% endblock %}

{% block content %}
	<div class="container mt-5">
		<div class="jumbotron my-5 bg-dark text-white">
			{% if error is not null %}
				<div class="alert alert-danger" role="alert">
					{{error}}
				</div>
			{% endif %}
			<h2 class="display-4 mb-5 text-center">Login</h2>
			<div class="row">
				<div class="col-lg-6 col-md-12 col-sm-12 m-auto">
					<form method="POST">
						<div class="form-group">
							<label for="email" class="d-none">Email</label>
							<div class="row">
								<div class="col-lg-1 col-xs-12 text-center">
									<i class="fas fa-user input-prefix"></i>
								</div>
								<div class="col-lg-11 col-xs-12">
									<input type="email" class="form-control" id="email" name="email" value="plop@plop.fr">
								</div>
							</div>
						</div>
						<div class="form-group">
							<label for="password" class="d-none">Password</label>
							<div class="row">
								<div class="col-lg-1 col-xs-12 text-center">
									<i class="fas fa-lock prefix"></i>
								</div>
								<div class="col-lg-11 col-xs-12">
									<input type="password" class="form-control validate" id="password" name="password" value="plop">
								</div>
							</div>
						</div>
						<div class="text-center mt-4">
							<button type="submit" class="btn btn-primary">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
