{% extends 'layout.html.twig' %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12 my-5">
            <form method="POST">
                <div class="row">
                    <div class="col-12">
                        <label for="serach">Model</label>
                        <div class="form-group">
                            <input class="form-control" type="text" id="search" name="search"
                                placeholder="ex : air max">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label for="brand_id">Brand</label>
                            <select class="form-control" id="brand_id" name="brand_id">
                                <option value={{article.brand_id}}>{{article.brand_name}}</option>
                                {% for brand in brands %}
                                {% if brand.id != article.brand_id %}
                                <option value={{brand.id}}>{{brand.name}}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="color_id">Color</label>
                            <select class="form-control" id="color_id" name="color_id">
                                <option value={{article.color_id}}>{{article.color_name}}</option>
                                {% for color in colors %}
                                {% if color.id != article.color_id %}
                                <option value={{color.id}}>{{color.name}}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="size_id">Size</label>
                            <select class="form-control" id="size_id" name="size_id">
                                <option value={{article.size_id}}>{{article.size}}</option>
                                {% for size in sizes %}
                                {% if size.id != article.size_id %}
                                <option value={{size.id}}>{{size.size}}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary">Search</i></button>
                    </div>
                </div>
                <div class="text-right">
                    <a href="/">Tous les articles</a>
                </div>
            </form>
        </div>
        {% for article in articles %}
        <div class="col-lg-3 col-md-6 col-sm-12 my-3">
            <div class="card">
                <img src="{{article.images[0].url}}" class="card-img-top" alt="air max 270">
                <div class="card-body text-center">
                    <h5 class="card-title">{{article.model}} - {{article.brand_name}}</h5>
                    <p>{{article.price}} $</p>
                </div>
                <div class="card-footer ">
                    <ul class="nav">
                        <li class="nav-item mx-auto">
                            <form method="POST">
                                <input type="text" class="d-none" name="add_article" value="{{article.id}}">
                                <button type="submit" class="btn btn-primary"><i
                                        class="fas fa-cart-arrow-down"></i></button>
                            </form>
                        </li>
                        <li class="nav-item mx-auto">
                            <a href="/home/showArticle/{{ article.id }}" class="btn btn-success"><i
                                    class="fas fa-eye"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}