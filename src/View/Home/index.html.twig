{% extends 'layout.html.twig' %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12 my-5">
            <form method="POST">
                <div class="row">
                    <div class="col-6">
                        <input class="form-control" type="text" id="search" name="search" placeholder="ex : nike">
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="text-right">
                    <a href="/">Tous les articles</a>
                </div>
            </form>
        </div>
        {% for article in articles %}
        <div class="col-lg-3 col-md-6 col-sm-12 my-3">
            <div class="card">
                <img src="{{article.img}}" class="card-img-top" alt="air max 270">
                <div class="card-body text-center">
                    <h5 class="card-title">{{article.name}}</h5>
                    <p>{{article.price}} $</p>
                </div>
                <div class="card-footer ">
                    <ul class="nav">
                        <li class="nav-item mx-auto">
                            <form method="POST">
                                <input type="text" class="d-none" name="add_article" value="{{article.id}}">
                                <button type="submit" class="btn btn-primary"><i
                                        class="fas fa-cart-arrow-down"></i></button>
                            </form>
                        </li>
                        <li class="nav-item mx-auto">
                            <a href="/home/showArticle/{{ article.id }}" class="btn btn-success"><i
                                    class="fas fa-eye"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}